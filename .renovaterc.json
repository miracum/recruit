{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>miracum/.github//renovate/default"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "fhir/**"
  ],
  "pip-compile": {
    "managerFilePatterns": [
      "/(^|/|\\.)requirements\\.txt$/"
    ]
  },
  "packageRules": [
    {
      "pinDigests": false,
      "matchPackageNames": [
        "/^ghcr.io/miracum/recruit/"
      ]
    }
  ]
}
